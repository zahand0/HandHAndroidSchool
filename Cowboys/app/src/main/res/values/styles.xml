<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance" parent="android:TextAppearance" />

    <style name="TextAppearance.Headline">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.Body">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.Label">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.Headline.Large">
        <item name="android:textSize">@dimen/text_headline_large_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_h1_line</item>
    </style>

    <style name="TextAppearance.Headline.Medium">
        <item name="android:textSize">@dimen/text_headline_medium_size</item>
    </style>

    <style name="TextAppearance.Headline.Small">
        <item name="android:textSize">@dimen/text_headline_small_size</item>
    </style>

    <style name="TextAppearance.Body.Large">
        <item name="android:textSize">@dimen/text_body_large_size</item>
    </style>

    <style name="TextAppearance.Body.Medium">
        <item name="android:textSize">@dimen/text_body_medium_size</item>
    </style>

    <style name="TextAppearance.Body.Small">
        <item name="android:textSize">@dimen/text_body_small_size</item>
    </style>

    <style name="TextAppearance.Label.Large">
        <item name="android:textSize">@dimen/text_label_large_size</item>
    </style>

    <style name="TextAppearance.Label.Medium">
        <item name="android:textSize">@dimen/text_label_medium_size</item>
    </style>

    <style name="TextAppearance.Label.Small">
        <item name="android:textSize">@dimen/text_label_small_size</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="TextAppearance.Label.Medium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Theme.Cowboys.TexInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/seashell</item>
        <item name="boxStrokeColor">@color/text_field_box_stroke_color</item>
        <item name="shapeAppearance">
            @style/Theme.Cowboys.ShapeAppearanceTextInputLayout
        </item>
        <item name="android:textAppearance">
            @style/TextAppearance.TextField
        </item>
        <item name="hintTextAppearance">
            @style/TextAppearance.TextField.Hint
        </item>
        <item name="android:textColorHint">@color/silver_chalice</item>
        <item name="hintTextColor">@color/silver_chalice</item>
        <item name="endIconTint">@color/black</item>
        <item name="endIconDrawable">@drawable/text_field_trailing_icon</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="errorTextColor">@color/error</item>
    </style>

    <style name="Theme.Cowboys.ShapeAppearance" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Theme.Cowboys.ShapeAppearance.Large">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme.Cowboys.ShapeAppearanceTextInputLayout" parent="Theme.Cowboys.ShapeAppearance" />

    <style name="Theme.Cowboys.ShapeAppearanceButton" parent="Theme.Cowboys.ShapeAppearance" />

    <style name="TextAppearance.TextField">
        <item name="android:textSize">@dimen/text_headline_large_size</item>
    </style>

    <style name="TextAppearance.TextField.Hint">
        <item name="android:textSize">@dimen/text_label_medium_size</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.Body">
        <item name="android:textSize">@dimen/text_body_large_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="TextAppearance.TabLayout" parent="TextAppearance.Body.Medium">
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="TextAppearance.TextButton" parent="TextAppearance.Body.Small">
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textColor">?attr/colorPrimary</item>

    </style>

    <style name="TextAppearance.Button.Small">
        <item name="android:textSize">@dimen/text_body_small_size</item>
    </style>

    <style name="TextAppearance.Toolbar" parent="TextAppearance.Headline.Small">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.Cowboys.Button" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="shapeAppearance">
            @style/Theme.Cowboys.ShapeAppearanceButton
        </item>
        <item name="android:textAppearance">
            @style/TextAppearance.Button
        </item>
    </style>

    <style name="TextAppearance.Profile.Name" parent="TextAppearance.Headline.Medium">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.Profile.Occupation" parent="TextAppearance.Body.Medium">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.Profile.AppVersion" parent="TextAppearance.Label.Large">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Profile.CardButton" parent="TextAppearance.Body.Medium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Theme.Cowboys.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.TextButton</item>
        <item name="android:drawablePadding">@dimen/normal_25</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Theme.Cowboys.Button.Small">
        <item name="android:textAppearance">
            @style/TextAppearance.Button.Small
        </item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorSurface">?attr/colorPrimary</item>
    </style>

    <style name="Widget.App.BottomSheetDialog" parent="Widget.Material3.BottomSheet">
        <item name="android:background">@drawable/bottom_sheet_dialog_shape</item>
    </style>

    <style name="Widget.App.Snackbar.Error" parent="Widget.Material3.Snackbar">
        <item name="backgroundTint">@color/error</item>
        <item name="shapeAppearance">@style/Theme.Cowboys.ShapeAppearance</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="shapeAppearance">@style/Theme.Cowboys.ShapeAppearance.Large</item>
        <item name="cardBackgroundColor">@color/white_almost</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="TextAppearance.Product.Price" parent="TextAppearance.Headline.Medium" />

    <style name="TextAppearance.Product.Title" parent="TextAppearance.Headline.Small">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.Product.Category" parent="TextAppearance.Body.Medium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Product.Description" parent="TextAppearance.Body.Medium">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.Product.Details" parent="TextAppearance.Body.Medium">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Product.Badge" parent="TextAppearance.Body.Medium">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Product.Size" parent="TextAppearance.Body.Large">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Widget.App.CardView.ProductPreview" parent="Widget.Material3.CardView.Outlined">
        <!--        <item name="android:checkable">true</item>-->
        <!--        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>-->
        <item name="cardCornerRadius">@dimen/product_image_preview_item_card_corner_radius</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorOutline">@color/transparent</item>
        <item name="colorSecondary">@color/seashell</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabTextAppearance">@style/TextAppearance.TabLayout</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="TextAppearance.Order.ProductNumberDate" parent="TextAppearance.Label.Small">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.Order.Status" parent="TextAppearance.Body.Medium" />

    <style name="TextAppearance.Order.Status.InWork" parent="TextAppearance.Body.Medium">
        <item name="android:textColor">@color/green_success</item>
    </style>

    <style name="TextAppearance.Order.Status.Cancel" parent="TextAppearance.Body.Medium">
        <item name="android:textColor">@color/red_cancel</item>
    </style>

    <style name="TextAppearance.Order.ProductName" parent="TextAppearance.Body.Small" />

    <style name="TextAppearance.Order.Details" parent="TextAppearance.Label.Small">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Widget.App.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/custom_popup_background</item>
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.Body.Medium</item>
        <item name="elevation">16dp</item>
    </style>

</resources>