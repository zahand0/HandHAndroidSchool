<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance" parent="android:TextAppearance">
        <item name="fontFamily">@font/mts_sans_regular</item>
    </style>

    <style name="TextAppearance.BodyLarge">
        <item name="android:textSize">@dimen/text_body_large_size</item>
        <item name="fontFamily">@font/mts_sans_bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.BodyMedium">
        <item name="android:textSize">@dimen/text_body_medium_size</item>
    </style>

    <style name="Theme.BookStore.ShapeAppearance" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Theme.BookStore.ShapeAppearanceButton" parent="Theme.BookStore.ShapeAppearance" />

    <style name="TextAppearance.Button" parent="TextAppearance.BodyLarge">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.BookStore.Button" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="shapeAppearance">
            @style/Theme.BookStore.ShapeAppearanceButton
        </item>
        <item name="android:textAppearance">
            @style/TextAppearance.Button
        </item>
    </style>
</resources>